{
  "ts-node": {
    "files": true,
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {   
    "target": "es2016",                                 
    "module": "commonjs",                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,
    "strict": true,                                     
    "skipLibCheck": true,
    "typeRoots": [
      "./src/types/**/*"
    ],
    "baseUrl": "src"                           
  },
  "include": [
    "src/**/*"
  ]
}
